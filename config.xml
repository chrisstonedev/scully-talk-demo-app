<?xml version='1.0' encoding='utf-8'?>
<widget id="dev.chrisstone.web" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Chris Stone</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="contact@chrisstone.dev" href="https://chrisstone.dev">
        Chris Stone
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <resource-file src="res/values/colors.xml" target="/app/src/main/res/values/colors.xml" />
        <icon background="@color/background" density="mdpi" foreground="res/icon/android/mdpi-foreground.png" src="res/icon/android/mdpi.png" />
        <icon background="@color/background" density="hdpi" foreground="res/icon/android/hdpi-foreground.png" src="res/icon/android/hdpi.png" />
        <icon background="@color/background" density="xhdpi" foreground="res/icon/android/xhdpi-foreground.png" src="res/icon/android/xhdpi.png" />
        <icon background="@color/background" density="xxhdpi" foreground="res/icon/android/xxhdpi-foreground.png" src="res/icon/android/xxhdpi.png" />
        <icon background="@color/background" density="xxxhdpi" foreground="res/icon/android/xxxhdpi-foreground.png" src="res/icon/android/xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
